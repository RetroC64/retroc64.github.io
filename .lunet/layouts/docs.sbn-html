---
layout: base
---
<div class="container">
  <div class="row">
      <div id="docsSidebar" class="col-12 col-lg-3 align-self-start sticky-top menu-sidebar collapse d-lg-block">
        {{ site.menu.doc.render { kind: "menu",  collapsible: true, post_active: '<nav class="js-toc toc"></nav>'} }}
      </div>
      <div class="col-12 col-lg-9 js-toc-content">
        {{ site.menu.doc.breadcrumb }}
        <p id="lunet-results"></p>
        <!-- Toggle button visible only on small screens -->
        <button
          class="btn btn-outline-secondary btn-sm d-lg-none mb-3"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#docsSidebar"
          aria-controls="docsSidebar"
          aria-expanded="false"
          aria-label="Toggle docs menu">
          Menu
        </button>
        
        <h1>{{ page.title }}</h1>
{{ content }}
      </div>
  </div>
</div>